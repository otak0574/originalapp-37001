<h2>店舗情報登録</h2>

<%= form_for @info do |f| %>
  <div class='form-wrap'>
    <div class='form-header'>
      <%= render "devise/shared/error_messages", resource: @info %>

      <div class="field">
        <%= f.label :business_hours, "営業時間" %><br />
        <%= f.text_field :business_hours %>
      </div>

      <div class="field">
        <%= f.label :details, "店舗説明"%><br />
        <%= f.text_area :details %>
      </div>
      
      <div class="actions">
        <%= f.submit "NEXT" %>
      </div>
      <button type="button" onclick="history.back();">戻る</button>
    </div>
  </div>
<% end %>
